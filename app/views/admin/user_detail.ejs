<%-include('../partials/header_manager_album.ejs') %>
<%-include('../partials/header_navbar.ejs') %>
<section class="main">
    <section class="container-fluid banner">
        <a href="/admin/user" class="material-icons back-button point" id="back" >arrow_back</a>
        
        <br>    
            <% if(!user.profilePicture){ %>
                <img src="/src/home.png" alt="" class="artist-cover">
            <% } else{ %>
                <img src=<%=user.profilePicture%> alt="" class="artist-cover">
            <% } %>
            
            <section class="text">
                <i><%=user.status%></i>
                <br>
                <i class="artist-name"><%=user.name + " " + user.lastName%></i>
                <br>
                <button type="button" class="btn material-icons-outlined" id="btn-add-more-album" style="display: none;">Add More Song <span class="material-icons">add_circle_outline</span></button> 
                <!-- <form action="/admin/user/<%=user._id%>/edit" method="GET">
                    <button type="submit" class="btn-edit rounded-pill" id="btn-edit">Edit</button>
                </form> -->
                <br>
                <br>
                    <form action="/admin/user/<%=user._id%>/delete" method="post">
                        <button class="rounded-pill btn-delete-small d-block d-lg-none" onclick="return confirm('Are you sure you want to delete this item?');">Delete user</button>
                    </form>
                    <form action="/admin/user/<%=user._id%>/delete" method="post">
                        <button class="rounded-pill btn-delete d-none d-lg-block" onclick="return confirm('Are you sure you want to delete this item?');">Delete user</button>
                    </form>
                </section>
                </section>
                <div class="contaienr accordion">
                    <h1 style="color: white; font-size: 550%;">Activities</h1>
                    <% if(activity.length === 0){ %>
                        <h1 style="text-align: center; color: white;">This user has no activity records</h1>
                   <% } %>
                    <% activity.forEach(function(activity){ %>
                        <div class="accordion-item" id="accordionSong">
                            <h2 class="accordion-header" id="heading<%=activity._id%>">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=activity._id%>" aria-expanded="true" aria-controls="collapse<%=activity._id%>">
                                    <h5 class="title id-song-title" id= <%= activity._id %> > <%= activity.date %></h5>
                                </button>
                            </h2>
                        </div>
                        <div id="collapse<%=activity._id%>" class="accordion-collapse collapse" aria-labelledby="heading<%=activity._id%>" data-bs-parent="#accordionSong">
                            <div class="accordion-body">
                                <section>
                                    <h3 style="color: white;">
                                        <%= activity.detail %>
                                    </h3>
                                </section>
                            </div>
                        </div>  
                    <% }) %>
                </div>  
         
</section>

<%-include('../partials/footer.ejs') %>